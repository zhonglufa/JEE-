<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        https://www.springframework.org/schema/context/spring-context.xsd">
      <!--配置SpringMVC要扫描的包-->
    <context:component-scan base-package="com.guihang2.bbs_forum.dao"/>
       <!--引入数据库属性文件-->
    <context:property-placeholder location="classpath:jdbc.properties" />
    <!--数据源-->
    <bean id="dataSource" class="com.alibaba.druid.pool.DruidDataSource">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>
    <!--创建sqlSessionFactory对象-->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <!-- 配置 TypeHandler 扫描包 -->
        <property name="typeHandlersPackage" value="com.guihang2.bbs_forum.typehandler"/>
    </bean>
    <!--扫描Dao包,创建动态代理对象，会自动存储到Spring IOC容器中-->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
        <!--指定要扫描的dao的包-->
        <property name="basePackage" value="com.guihang2.bbs_forum.dao"/>
    </bean>
<!--    分页插件配置-->
    <bean class="com.baomidou.mybatisplus.extension.plugins.MybatisPlusInterceptor">
        <property name="interceptors">
            <list>
                <bean class="com.baomidou.mybatisplus.extension.plugins.inner.PaginationInnerInterceptor">
                    <property name="overflow" value="true"/>
                </bean>
            </list>
        </property>
    </bean>
</beans>














